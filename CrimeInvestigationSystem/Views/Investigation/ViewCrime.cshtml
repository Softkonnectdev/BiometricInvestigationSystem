

@model CrimeInvestigationSystem.Models.Crime
@{
    var imgSrc = "";
    var imgSrc2 = "";
    var age = 0;
}


<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    @{
                        if (Model.Photo != null)
                        {
                            var base64 = Convert.ToBase64String(Model.Photo);
                            imgSrc = String.Format("data:image/png;base64,{0}", base64);
                        }
                        if (Model.Profile.Passport != null)
                        {
                            var base64 = Convert.ToBase64String(Model.Profile.Passport);
                            imgSrc2 = String.Format("data:image/png;base64,{0}", base64);
                        }
                        age = DateTime.Now.Year - Model.Profile.DOB.Year;
                    }
                    <div class="img" style="background-image: url(@imgSrc2);"></div>
                    <h3 class="text-center mb-4">
                        <span>Crime Record</span>
                    </h3>

                    <div class="table-responsive">
                        <table class="table table-hover m-2">


                            <tr>
                                <td class="text-left">Crime Committed</td>
                                <td class="text-left">@Model.Type</td>
                            </tr>
                            <tr>
                                <td class="text-left">Dafualted Law</td>
                                <td class="text-left">@Model.DefaultedLaw</td>
                            </tr>
                            <tr>
                                <td class="text-left">Address of Crime</td>
                                <td class="text-left">@Model.AddressofCrime</td>
                            </tr>

                            <tr>
                                <td class="text-left">Tried?</td>
                                <td class="text-left">
                                    <span class="badge bg-danger text-light">
                                        @(Model.Tried == true ? "YES TRIED":"NOT TRIED")
                                    </span>
                                </td>
                            </tr>

                            <tr>
                                <td class="text-left">Date of crime Registration</td>
                                <td class="text-left">@Model.CommittedDate</td>
                            </tr>
                            
                            <tr>
                                <td colspan="2" class="text-left lead fw-bold">Prospective Suspect Profile</td>
                            </tr>
                            <tr>
                                <td class="text-left">Full Name</td>
                                <td class="text-left">@String.Format("{0} {1} {2}", Model.Profile.SurName, Model.Profile.FirstName, Model.Profile.MiddleName) </td>

                            </tr>
                            <tr>
                                <td class="text-left">Gender</td>
                                <td class="text-left">@Model.Profile.Gender</td>
                            </tr>

                            <tr>
                                <td class="text-left">Age</td>
                                <td class="text-left">@age</td>
                            </tr>
                            <tr>
                                <td class="text-left">Permanenet Address</td>
                                <td class="text-left">@Model.Profile.PermanentResident</td>
                            </tr>
                           

                        </table>
                    </div>



                    <p class="lead text-center m-2">
                        Crime Photo Gallery
                    </p>
                    @*<div class="img col-12" style="background-image: url(@imgSrc);"></div>*@
                    <img src="@imgSrc" class="rounded mx-auto d-block" height="250" width="300" alt="NO CRIME PHOTO" />
                </div>
            </div>
        </section>
    </div>

</div>