@model CrimeInvestigationSystem.Models.ComparePrintViewModel

@{
    ViewBag.Title = "Suspect Print";
}

@if (ViewBag.Msg != null)
{
    <p id="msg" style="display:none">@ViewBag.Msg</p>
}

<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    <div class="img" style="background-image: url(/Images/img-01.png);"></div>
                    <h3 class="text-center mb-4">
                        <span>Upload Suspect Finger Print Sample</span>

                    </h3>

                    @using (Html.BeginForm("ComparePrints", "Investigation", FormMethod.Post, new
                    { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Suspect Sample</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.SuspectPrint, htmlAttributes: new { @class = "control-label  " })
                            <input type="file" id="SuspectPrint" name="SuspectPrint" class="form-control" required />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Search Suspect Finger Print" class="btn btn-primary btn-outline-danger" />
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </section>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var Smsg = $("#msg").text();
        if (Smsg.trim() != "") {
            alert(Smsg);
        }


    })

</script>