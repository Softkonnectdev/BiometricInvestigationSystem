@model CrimeInvestigationSystem.Models.UploadFingerPrintViewModel

@{
    ViewBag.Title = "Upload User Biometrics";
}

@if (ViewBag.Msg != null)
{
    <p id="msg" style="display:none">@ViewBag.Msg</p>
}

<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    <div class="img" style="background-image: url(/Images/img-01.png);"></div>
                    <h3 class="text-center mb-4">
                        <span>Upload Finger Print</span>

                    </h3>

                    @using (Html.BeginForm("UploadFingerPrint", "Admin", FormMethod.Post, new
                    { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Upload User Finger Print</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label  " })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.LeftThumUpload, htmlAttributes: new { @class = "control-label  " })
                        <input type="file" id="LeftThumUpload" name="LeftThumUpload" class="form-control" required />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.RightThumUpload, htmlAttributes: new { @class = "control-label  " })
                        <input type="file" id="RightThumUpload" name="RightThumUpload" class="form-control" required />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Upload Now" class="btn btn-primary btn-outline-danger" />
                        </div>
                    </div>
                </div>
                    }


                </div>
            </div>
        </section>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var Smsg = $("#msg").text();
        if (Smsg.trim() != "") {
            alert(Smsg);
        }


    })

</script>