
@{
    ViewBag.Title = "Customers' Account Register";
}


@if (ViewBag.Msg != null)
{
    <p id="msg" style="display:none">@ViewBag.Msg</p>
}

<div id="bucket" class="m-3">

    <div class="row">
        <div class="col">
            <section class="ftco-section">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-10">
                            <div class="login-wrap">
                                <div class="img" style="background-image: url(/Images/UBA4.png);"></div>
                                <h3 class="text-center mb-4">Look Up Customers' Account</h3>

                                @using (Html.BeginForm("Account", "Client", FormMethod.Get))
                                {

                                    <div class="form-group mb-3">
                                        @Html.Editor("AccountNumber", new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter customers' account number" } })
                                    </div>

                                    <div style="text-align: center;" id="loaderDivx" class="pt-2">
                                        <img src="~/Images/loadingx.gif" width="80" height="80" class="img-circle img-thumbnail" />
                                    </div>

                                    <div class="d-grid gap-2 col-md-12 mx-auto">
                                        <input class="btn btn-primary submit fw-bold px-3 fw-bolder" type="submit" id="btnSearch"
                                               value="Get Customer Now" />
                                    </div>

                                }


                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>


    <input type="button" class="btn btn-outline-primary fw-bold px-3 fw-bolder" onclick="AddEdit('')" value="New Account" />
    <hr style="color:gray;" />

    <br />

    @if (ViewBag.Accounts != null)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Account Number</th>
                        <th>Balance</th>
                        <th>Phone</th>
                        <th>Account Manager</th>

                        <th></th>

                    </tr>
                </thead>

                <tbody class="table-group-divider">
                    @{ int i = 1;}
                    @foreach (var item in ViewBag.Accounts as List<UBA_Network_Security_System.Models.Account>)
                    {
                        var ItemCount = ViewBag.AccountCount;
                        <tr id="row_@item.AccountNumber">

                            <td>
                                @if (i <= ItemCount)
                                {
                                    @i
                                }

                            </td>
                            <td>@String.Format("{0} {1} {2}", item.SurName, item.FirstName, item.MiddleName) </td>
                            <td>@item.Email</td>
                            <td>@item.AccountNumber</td>
                            <td>@item.Balance.ToString("c", ViewBag.CurrencyFmt)</td>
                            <td>@item.Phone</td>
                            <td>@item.AccountManagerName</td>


                            <td>
                                <div class="d-grid gap-2 col-md-12 mx-auto">
                                    <a href="#" class="text-danger" onclick="ConfirmDeleteRecord('@item.AccountNumber')"><span class="fa fa-2x fa-trash-o"></span> </a>
                                    <a href="#" class="text-success" onclick="AddEdit('@item.AccountNumber')"><span class="fa fa-2x fa-pencil-square-o"></span> </a>

                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>

            </table>

        </div>


    }

    @* MODAL BELLOW IS USED  FOR NEW/EDIT RECORD *@
    <div class="modal fade" id="AddEditModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body" id="modalBody">

                </div>
                <div class="modal-footer">

                    <div class="row">
                        <div class="col">

                            <a href="#" class=" btn btn-outline-dark py-3 mx-md-2" id="btnReset">Reset</a>

                            <a href="#" class="btn btn-outline-danger py-3 mx-md-2" id="btnCancle">Close</a>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <div class="modal fade" id="DeleteModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Delete Record</h1>
                    <button type="button" class="btn-close text-bg-danger" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>


                <div class="modal-body">

                    <h2 class="text-center text-danger fs-3">ARE YOU SURE YOU WANT TO DELETE RECORD <span id="deleteId"></span>?</h2>
                    <input type="hidden" id="ID" />
                    <div class="d-grid gap-2 col-md-12 mx-auto">
                        <input type="submit" id="btnDelete" onclick="DeleteRecord()" class="btn btn-danger" value="Yes Delete" />
                    </div>
                </div>


            </div>


        </div>
    </div>




</div>


@*<script src="~/Scripts/jquery-3.4.1.js"></script>*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        var Smsg = $("#msg").text();
        if (Smsg.trim() != "") {
            debugger;
            alert(Smsg);
        }

        $("#loaderDivx").hide();

        $("#loaderDiv1").hide();

        $("#btnSearch").click(function () {
            $("#loaderDiv1").show();
        });


        $("#btnReset").click(function () {
            $("#Email").val("");
            $("#Phone").val("");
        })

        $("#btnCancle").click(function () {
            $("#AddEditModal").modal("hide");
        })

        $("#btnSearch").click(function () {
            var ph = $("#AccountNumber").val();
            if (ph.trim() != "")
                $("#loaderDivx").show();

        })

    })

    var AddEdit = function (id) {
        $("#loaderDiv11").show();
        var url = "/Client/AddEditAccount?ID=" + id; //USED TO SEARCH ENTITY WITH ID

        $("#modalBody").load(url, function () {  // LOAD THE CONTENT FROM THE ACTION /ADDEDITRECORD
            $("#loaderDiv").hide();
            $("#AddEditModal").modal("show");
        })
    }



    var ConfirmDeleteRecord = function (id) {
        $("#ID").val(id);
        $("#DeleteModal").modal("show");
    }


    var DeleteRecord = function () {

        var Id = $("#ID").val();

        $.ajax({

            type: "POST",
            url: "/Client/DeleteAccount",
            data: { ID: Id },
            success: function (result) {
                if (result == true) {
                    $("#row_" + Id).remove();
                    alert("Record deleted successfully!");
                    window.location.href = "/Client/Account";
                }
                else {
                    window.location.href = "/Client/Account";
                }
            }
        })


    }

</script>