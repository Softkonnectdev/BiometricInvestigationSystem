@model UBA_Network_Security_System.Models.Transfer

@{
    ViewBag.Title = "New Transfer";
}
@if (ViewBag.Msg != null)
{
    <p id="msg" style="display:none">@ViewBag.Msg</p>
}
<div class="bucket">


    <div class="row">
        <div class="col">
            <section class="ftco-section">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-7 col-lg-7">
                            <div class="login-wrap">
                                <div class="img" style="background-image: url(/Images/UBA5.jpeg);"></div>
                                <h3 class="text-center mb-4">United Bank of Africa</h3>
                                @using (Html.BeginForm("Transfer", "Transaction"))
                                {
                                    @Html.AntiForgeryToken()

                                    <h4>Transfer' Form</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <p class="lead">Sender Details</p>
                                    <hr />
                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.SenderAccountNumber, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter your Account Number" } })
                                        @Html.ValidationMessageFor(model => model.SenderAccountNumber, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.SenderPhone, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter your phone Number" } })
                                        @Html.ValidationMessageFor(model => model.SenderPhone, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.SecurePass, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter your securepass" } })
                                        @Html.ValidationMessageFor(model => model.SecurePass, "", new { @class = "text-danger" })
                                    </div>

                                    <p class="lead">Receiver Details</p>
                                    <hr />
                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.RecieverAccountNumber, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter recipient Account Number" } })
                                        @Html.ValidationMessageFor(model => model.RecieverAccountNumber, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.RecieverAccountName, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter recipient Account Name" } })
                                        @Html.ValidationMessageFor(model => model.RecieverAccountName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter Amount" } })
                                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                    </div>





                                    <div style="text-align: center;" id="loaderDiv1" class="pt-2">
                                        <img src="~/Images/loadingx.gif" width="80" height="80" class="img img-thumbnail" />
                                    </div>

                                    <div class="form-group">
                                        <button id="btnContinue" class="form-control btn btn-primary submit px-3">Continue</button>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

</div>


<script src=" https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>

<script>

    $(document).ready(function () {
        $("#loaderDiv1").hide();


        var msg = $("#msg").text();

        if (msg != null && msg != "") {
            alert(msg);
        }


        $("#btnContinue").click(function () {

            let saccNo = $("#SenderAccountNumber").val();
            let saccPh = $("#SenderAccountPhone").val();
            let raccNo = $("#RecieverAccountNumber").val();
            let amount = $("#Amount").val();
            let secPas = $("#SecurePass").val();

            if (saccNo != "" && saccPh != "" && amount != "" && raccNo != "" && secPas != "") {
                $("#loaderDiv1").show();

            }
        })




    });
</script>
