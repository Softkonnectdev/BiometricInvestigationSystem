

@model UBA_Network_Security_System.Models.Deposit





<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    <div class="img" style="background-image: url(/Images/UBA-BANK1.jpg);"></div>
                    <h3 class="text-center mb-4">
                        <span>Update Deposit Transaction</span>
                    </h3>
                    @using (Html.BeginForm("UpdateDepsit", "Transaction", new { @id = "frmUpdaeDeposit" }))
                    {
                        @*<form id="frmUpdaeDeposit">*@
                            @Html.AntiForgeryToken()

                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.AccountName)
                            @Html.HiddenFor(model => model.AccountNumber)
                            @Html.HiddenFor(model => model.CashaierID)
                            @Html.HiddenFor(model => model.CreatedAt)
                            @Html.HiddenFor(model => model.Remark)
                            @Html.HiddenFor(model => model.Status)

                            <div class="form-group mb-3">
                                @Html.TextBoxFor(o => o.Amount, new { @class = "form-control", @placeholder = "Enter Amount" })
                            </div>

                            <div class="form-group mb-3">
                                @Html.TextBoxFor(o => o.DepositorName, new { @class = "form-control", @placeholder = "Enter Depositors' Name" })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(o => o.DepositorPhone, new { @class = "form-control", @placeholder = "E.g 08012345678 not more than 11 characters" })
                            </div>



                            <div style="text-align: center;" id="loaderDiv1" class="pt-2">
                                <img src="~/Images/loadingx.gif" width="80" height="80" class="img img-thumbnail" />
                            </div>

                            <div class="d-grid gap-2 col-md-12 mx-auto mt-2">
                                <div class="form-group">
                                    <button id="btnUpdate" class="form-control btn btn-primary submit px-3">Continue</button>
                                </div>
                            </div>



                        @*</form>*@
                    }
                    </div>
            </div>
        </section>
    </div>

</div>





