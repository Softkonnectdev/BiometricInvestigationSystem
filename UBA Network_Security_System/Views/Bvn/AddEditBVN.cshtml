

@model UBA_Network_Security_System.Models.BVNBank





<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    <div class="img" style="background-image: url(/Images/UBA-BANK1.jpg);"></div>
                    <h3 class="text-center mb-4">
                        @if (Model.SurName != null)
                        {<span>Update BVN</span>}
                        else
                        { <span>Add New BVN</span>}
                    </h3>

                    <form id="frmBVN">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.BVN)

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(o => o.SurName, new { @class = "form-control", @placeholder = "Enter sur name" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(o => o.FirstName, new { @class = "form-control", @placeholder = "Enter first name" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(o => o.MiddleName, new { @class = "form-control", @placeholder = "Enter middle number" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(o => o.Phone, new { @class = "form-control", @placeholder = "E.g 08012345678 not more than 11 characters" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(o => o.Email, new { @class = "form-control", @placeholder = "Enter email address" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your birth date" } })
                        </div>
                        <div class="form-group mb-3">
                            @Html.DropDownListFor(x => x.Gender, new SelectList(ViewBag.GenderList, "Name", "Name"), "Select your gender", new { @class = "form-control" })
                        </div>


                        <div style="text-align: center;" id="loaderDiv1" class="pt-2">
                            <img src="~/Images/loadingx.gif" width="80" height="80" class="img img-thumbnail" />
                        </div>

                        <div class="d-grid gap-2 col-md-12 mx-auto mt-2">
                            <a href="#" class="btn btn-primary submit fw-bold px-3 fw-bolder" id="btnSaveUpdate">
                                @if (Model.SurName != null)
                                {<span>Update BVN</span>}
                                else
                                { <span>Save New BVN</span>}
                            </a>
                        </div>



                    </form>

                </div>
            </div>
        </section>
    </div>

</div>





<script>

    $(document).ready(function () {
        $("#loaderDiv1").hide();

        $("#btnSaveUpdate").click(function () {

            $("#loaderDiv1").show();

            var frmData = $("#frmBVN").serialize();
            var data = frmData;
            debugger;

            $.ajax({
                type: "POST",
                url: "/BVN/BVN",
                data: data,
                success: function (result) {
                    $("#loaderDiv").hide();
                    $("#AddEditModal").modal("hide"); //TO HIDE MODAL AFTER SAVING RECORD
                    if (result.trim != "" || result.trim != null) { alert(result); }
                    window.location.href = "/BVN/BVN";
                }
            })
        })

    })
</script>


